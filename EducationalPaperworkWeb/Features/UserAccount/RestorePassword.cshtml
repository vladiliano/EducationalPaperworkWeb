@model EducationalPaperworkWeb.Domain.Domain.Models.User.UserRestorePassword

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Відновлення паролю</title>
    <link rel="stylesheet" href="~/css/reg-log-styles.css">
    <script src="~/js/show_hide_password.js"></script>
</head>
<body>

    <div class="login">
        <form method="post">
            <h1>Restore Password</h1>

            <label>Email</label>
            <input asp-for="Email" type="text" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label>Password</label>
            <div class="password">
                <input type="password" id="password-input" name="password">
                <a href="#" class="password-control" onclick="return show_hide_password(this);"></a>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>

            <label>Repeat Password</label>
            <div class="password">
                <input type="password" id="repeat-password-input" name="password">
                <a href="#" class="password-control" onclick="return show_hide_password(this);"></a>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>

            <button asp-action="RestorePassword" class="btn btn-primary" type="submit">Get Code</button>

            <div class="link-container">
                <a asp-action="SignUp" class="link-text">Sign up</a>
                <a asp-action="SignIn" class="link-text">Sign in</a>
            </div>
        </form>
    </div>

</body>
</html>
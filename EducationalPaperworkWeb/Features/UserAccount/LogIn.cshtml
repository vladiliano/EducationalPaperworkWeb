@model EducationalPaperworkWeb.Domain.Domain.Models.User.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Авторизація</title>
    <link rel="stylesheet" href="~/css/logRegStyles.css">
</head>
<body>

    <div class="login">
        <form>
            <h1>LOG IN</h1>
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="text" />
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" />
            <button asp-action="" type="submit" class="btn btn-primary">SUBMIT</button>

            <div class="link-container">
                <a asp-action="Registration" class="link-text">Sign up</a>
                <a asp-action="ChangePassword" class="link-text">Recover password</a>
            </div>
        </form>
    </div>

</body>
</html>

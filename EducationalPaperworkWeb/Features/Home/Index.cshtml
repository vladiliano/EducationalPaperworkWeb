@using EducationalPaperworkWeb.Domain.Domain.ViewModels
@model UserViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Chat</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/chat.css" />
    <script src="~/js/chat.js"></script>
    <style>
        .col-left {
            width: 15%;
        }

        .col-right {
            width: 85%;
        }
    </style>
</head>
<body>
    <div class="container-fluid h-100">
        <div class="row justify-content-center h-100">
            <div class=" chat col-left">
                <div class="card mb-sm-3 mb-md-0 contacts_card">
                    <button class="create_chat_btn"><i class="material-icons" id="create_chat_icon">add_box</i>Створити звернення</button>
                    <div class="card-body contacts_body">
                        <form asp-controller="Home" method="post">
                            @foreach (var chat in Model.Chats)
                            {
                                <button name="chatId" value="@chat.Id" class="chat_btn">@chat.Name</button>
                            }
                        </form>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
            <div id="chatContainer" class="chat col-right">
                <div class="card">
                    <div id="card-header" class="card-header msg_head" style="visibility: hidden">
                        <div class="d-flex bd-highlight">
                            <div class="user_info">
                                <span id="companion-name"></span>
                                <span id="action_menu_btn" class="toggle_menu"><i class="fas fa-angle-down"></i></span>
                                <div class="action_menu">
                                    <ul>
                                        <li><i class="fas fa-user-circle"></i> View profile</li>
                                        <li><i class="fas fa-users"></i> Add to close friends</li>
                                        <li><i class="fas fa-plus"></i> Add to group</li>
                                        <li><i class="fas fa-ban"></i> Block</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body msg_card_body">
                        <div class="hello-form" style="font-size: 15px; display: flex;">
                            Оберіть чат або надішліть звернення для його створення
                        </div>
                    </div>
                    <div class="card-footer">
                        <form id="sendMessageForm" style="visibility: hidden">
                            <div class="input-group">
                                <div class="input-group-append">
                                    <button type="submit" class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></button>
                                </div>
                                <textarea id="inputMessage" name="message" class="form-control type_msg"  maxlength="600" placeholder="Введіть повідомлення..."></textarea>
                                <div class="input-group-append">
                                    <button type="submit" class="input-group-text send_btn"><i class="fas fa-location-arrow"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>                    
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        var chatId;
        var senderId = '@Model.UserId';

        $(document).ready(function () {
            $('#inputMessage').on('keypress', function (e) {
                if (e.keyCode == 13 && !e.shiftKey) {
                    e.preventDefault();
                    sendMessage();
                }
            });

            $('.send_btn').click(function (e) {
                if ($(this).hasClass('send_btn')) {
                    e.preventDefault();
                    sendMessage();
                }
            });

            $('.chat_btn').click(function (e) {
                e.preventDefault();
                
                perChatId = $(this).val();

                if (perChatId !== chatId) {

                    chatId = perChatId;

                    $.ajax({
                        url: '/Home/LoadChat',
                        method: 'POST',
                        data: {
                            senderId: senderId,
                            chatId: chatId
                        },
                        success: function (data) {
                            updateChat(senderId, data);

                            $('#sendMessageForm').css('visibility', 'visible');
                            $('#card-header').css('visibility', 'visible');
                        }
                    });
                }
            });

            $('#action_menu_btn').click(function () {
                $('.action_menu').toggle();
            });

            var previousClickedBtn = null;

            $('.chat_btn').click(function (e) {
                e.preventDefault();

                if (previousClickedBtn !== null) {
                    $(previousClickedBtn).removeClass('selected');
                }

                $(this).addClass('selected');

                previousClickedBtn = this;
            });
        });
    </script>
</body>
</html>

@using EducationalPaperworkWeb.Domain.Domain.ViewModels
@model UserViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Chat</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/chat.css" />
    <script src="~/js/user-chat-scripts.js"></script>
    <style>
        .col-left {
            width: 15%;
        }

        .col-right {
            width: 85%;
        }
    </style>
</head>
<body>
    <div class="container-fluid h-100">
        <div class="row justify-content-center h-100">
            <div class=" chat col-left">
                <div class="card mb-sm-3 mb-md-0 contacts_card">
                    <button class="create_chat_btn"><i class="material-icons" id="create_chat_icon">add_box</i>Створити звернення</button>
                    <div class="card-body contacts_body">
                        <form asp-controller="Home" method="post">
                            @foreach (var chat in Model.UserChats)
                            {
                                <button name="chatId" value="@chat.Chat.Id" class="chat_btn">@chat.Chat.Name</button>
                            }
                        </form>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
            <div id="chatContainer" class="chat col-right">
                <div class="card">
                    <div class="card-header msg_head">
                        <div class="d-flex bd-highlight">
                            <div class="user_info">
                                <span>Ноунейм Ноунеймович</span>
                                <span id="action_menu_btn"><i class="fas fa-angle-down"></i></span>
                                <div class="action_menu">
                                    <ul>
                                        <li><i class="fas fa-user-circle"></i> View profile</li>
                                        <li><i class="fas fa-users"></i> Add to close friends</li>
                                        <li><i class="fas fa-plus"></i> Add to group</li>
                                        <li><i class="fas fa-ban"></i> Block</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body msg_card_body"></div>
                    <div class="card-footer">
                        <form id="sendMessageForm">
                            <div class="input-group">
                                <div class="input-group-append">
                                    <button type="submit" class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></button>
                                </div>
                                <textarea id="inputMessage" name="message" class="form-control type_msg" placeholder="Type your message..."></textarea>
                                <div class="input-group-append">
                                    <button type="submit" class="input-group-text send_btn"><i class="fas fa-location-arrow"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
                      @*string time = string.Empty;
                        if (message.TimeStamp.Year == DateTime.Now.Year
                        && message.TimeStamp.Month == DateTime.Now.Month
                        && message.TimeStamp.Day == DateTime.Now.Day) time = "Сьогодні о ";
                        else if (message.TimeStamp.Year == DateTime.Now.Year
                        && message.TimeStamp.Month == DateTime.Now.Month
                        && message.TimeStamp.Day == DateTime.Now.Day - 1) time = "Вчора о ";
                        else time = message.TimeStamp.ToString("d MMMM о ", new CultureInfo("uk-UA"));*@
                    
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        var chatId;
        var senderId = '@Model.Id';

        $(document).ready(function () {
            $('.send_btn').click(function (e) {
                if ($(this).hasClass('send_btn')) {
                    e.preventDefault();

                    var messageContent = $('#inputMessage').val();

                    $.ajax({
                        url: '/Home/SendMessage',
                        method: 'POST',
                        data: {
                            senderId: senderId,
                            chatId: chatId,
                            mess: messageContent
                        },
                        success: function (data, textStatus, xhr) {
                            if (xhr.status !== 204) {
                                addMessage(messageContent);
                            }
                        }
                    });
                }
            });

            $('.chat_btn').click(function (e) {
                e.preventDefault();
                
                chatId = $(this).val();

                $.ajax({
                    url: '/Home/LoadChat',
                    method: 'POST',
                    data: {
                        senderId: senderId,
                        chatId: chatId
                    },
                    success: function (data) {
                        updateChat(senderId, data);
                    }
                });
            });

            $('#action_menu_btn').click(function () {
                $('.action_menu').toggle();
            });
        });
    </script>
</body>
</html>
